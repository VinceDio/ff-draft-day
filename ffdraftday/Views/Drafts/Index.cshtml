@model IEnumerable<ffdraftday.Models.Draft>

@{
    ViewData["Title"] = "Index";
}

<h3>Drafts</h3>

<p>
    <a asp-action="Create" class="btn btn-success">New</a>
</p>
<div class="row">
    @foreach (Draft draft in Model)
    {
        <div class="col-sm-4">
            <div class="card shadow">
                <a asp-action="Details" asp-route-id="@draft.Id">
                    <div class="card-header">
                        <h5 class="font-weight-bold">@draft.Name</h5>
                    </div>
                    <div class="card-body">
                        <div>@draft.Location</div>
                        <div>@draft.StartTime.ToString("dddd MMMM d, yyyy")</div>
                    </div>
                    <div class="card-footer">
                        @if (draft.ReadyToDraft)
                        {
                            <div class="text-success">Ready to Draft</div>
                        }
                        else
                        {
                            <div class="text-danger">Needs Initialized</div>
                        }
                    </div>
                </a>
            </div>
        </div>
    }
</div>