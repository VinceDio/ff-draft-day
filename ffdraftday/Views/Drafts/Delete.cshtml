@model ffdraftday.Models.Draft

@{
    ViewData["Title"] = "Delete";
}

<h2 class="text-danger">Delete</h2>

<h4>@Model.Name</h4>
<p class="text-danger jumbotron">Are you sure you want to permanently delete this draft and all associated data?</p>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary">Cancel</a>
    </form>
</div>
