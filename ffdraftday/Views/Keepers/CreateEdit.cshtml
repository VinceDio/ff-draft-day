@model Keeper
<partial name="_TeamHeader" model="Model.Team" />

<h4>Keeper</h4>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form asp-action="Save" method="post" class="my-4">
    <input type="hidden" asp-for="@Model.Id" />
    <input type="hidden" asp-for="@Model.TeamId" />
    <div class="form-group">
        <label class="label">Player:</label>
        <select asp-for="@Model.PlayerId" class="form-control player-list" required>
            <option value="@Model.PlayerId">@Model.Player?.Name</option>
        </select>
        <span asp-validation-for="Player" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="label">Keeper Value (Round):</label>
        <input asp-for="Round" class="form-control" />
        <span asp-validation-for="Round" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="label">Years Remaining (after this year):</label>
        <input asp-for="YearsRemaining" class="form-control" />
        <span asp-validation-for="YearsRemaining" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="label">Note:</label>
        <input asp-for="@Model.Note" class="form-control" />
    </div>
    <div class="mt-2">
        <input type="submit" name="action" value="Save" class="btn btn-primary" />
        @if (Model.Id != 0)
        {
            <input type="submit" name="action" value="Delete" class="btn btn-danger" onclick="return confirm('Delete Keeper?')" />
        }
        <a asp-action="Details" asp-controller="Teams" asp-route-id="@Model.TeamId" class="btn btn-outline-primary">Cancel</a>
    </div>
</form>
