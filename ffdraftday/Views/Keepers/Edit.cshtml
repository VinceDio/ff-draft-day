@model Keeper

<h3>@Model.Team.Name</h3>
<div>@Model.Team.Owner</div>

<h4>Keeper</h4>

<form asp-action="Edit" method="post" class="my-4">
    <input type="hidden" asp-for="@Model.Id" />
    <input type="hidden" asp-for="@Model.TeamId" />
    <div class="form-group">
        <label class="label">Player:</label>
        <select asp-for="@Model.PlayerId" class="form-control" id="player-list">
            <option value="@Model.PlayerId">@Model.Player.Name</option>
        </select>
    </div>
    <div class="form-group">
        <label class="label">Round:</label>
        <input asp-for="@Model.Round" class="form-control" />
    </div>
    <div class="form-group">
        <label class="label">Note:</label>
        <input asp-for="@Model.Note" class="form-control" />
    </div>
    <div class="mt-2">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Details" asp-controller="Teams" asp-route-id="@Model.TeamId" class="btn btn-outline-primary">Cancel</a>
    </div>
</form>

@section Scripts {
    <script src="~/js/select-lists.js"></script>
}

