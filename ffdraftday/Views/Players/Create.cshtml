@model ffdraftday.Models.Player

@{
    ViewData["Title"] = "Create";
}

<h4>Add Player</h4>
<hr />
<div class="row">
    <div class="col-lg-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">NFL Team (3 character abbreviation - Ex: PIT, CLE)</label>
                <input asp-for="NFLTeam" class="form-control"  />
                <span asp-validation-for="NFLTeam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Position (2 character code - Ex: RB, WR)</label>
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-primary">Cancel</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
